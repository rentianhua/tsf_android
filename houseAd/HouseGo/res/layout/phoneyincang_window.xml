<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
		
	    <TextView 
	           android:id="@+id/tv_wheel_cancle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="取消"
	        android:padding="10dp"
	        android:textSize="14sp"
	        />	    
	        
	       <TextView 
	           android:id="@+id/tv_wheel_sure"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="确定"
	        android:layout_alignParentRight="true"
	        android:padding="10dp"
	        android:textSize="14sp"
	        />	
	     <TextView 
	         android:id="@+id/tv_wheel_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="是否隐藏手机号码"
	        android:padding="10dp"
	        android:textSize="14sp"
	        android:layout_centerInParent="true"
	        />	
	    
	</RelativeLayout>
	<Button
        android:layout_width="match_parent"
          android:layout_height="@dimen/fengexian"
        android:background="#c9c9cb" />
    
    <RadioGroup 
        android:id="@+id/rg_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        
        
        >
        
        <RadioButton 
            android:id="@+id/phone_gongkai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:checked="true"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_gravity="center"
            android:text="公开"
            android:button="@null"
            android:gravity="center"
            />
        <RadioButton 
            android:id="@+id/phone_yincang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_gravity="center"
            android:text="保密"
            android:button="@null"
            android:gravity="center"
            /> 
        
        
    </RadioGroup>
    
    
    
    
    

</LinearLayout>
