<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent" >
    
    
  <LinearLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/selector_bt_item"
        android:orientation="horizontal" >    
    
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >

       <ImageView
           android:id="@+id/iv_guanzhuershou"
           android:layout_width="120dp"
           android:layout_height="80dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:scaleType="centerCrop"
           android:background="#ffaaaaaa"
           android:src="@drawable/touxiang3" />

       

       <com.dumu.housego.entity.MyTextView
           android:id="@+id/tv_guanzhu_loupandizhi"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/tv_guanzhu_title"
           android:layout_below="@+id/tv_guanzhu_title"
           android:layout_marginTop="3dp"
           android:textColor="#999"
           android:text="楼盘地址:"
           android:textSize="12sp" />
       
       <com.dumu.housego.entity.MyTextView
           android:id="@+id/tv_guanzhu_jianzhumianji"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignLeft="@+id/tv_guanzhu_loupandizhi"
           android:layout_below="@+id/tv_guanzhu_loupandizhi"
           android:layout_marginTop="3dp"
            android:textColor="#999"
           android:text="155-226m2"
           android:textSize="12sp" />
       
       <com.dumu.housego.entity.MyTextView
                android:id="@+id/tv_guanzhu_junjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
           android:layout_below="@+id/tv_guanzhu_jianzhumianji"
                android:singleLine="true"
                android:text="5922元/㎡"
                android:textColor="#ff0000"
                android:textSize="12sp" />
       

       <com.dumu.housego.entity.MyTextView
           android:id="@+id/tv_guanzhu_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/iv_guanzhuershou"
           android:layout_marginLeft="10dp"
           android:layout_toRightOf="@+id/iv_guanzhuershou"
           android:text="深圳大鹏新区葵涌"
           android:textSize="14sp" />
   </RelativeLayout>
        
           </RelativeLayout>
        
    </LinearLayout>
         <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/gray" >

        <com.dumu.housego.entity.MyTextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="取消关注"
            android:textColor="@color/floralwhite" />

     
    </RelativeLayout>

</LinearLayout>
