<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="#ffaaaaaa"
            android:scaleType="centerCrop"
            android:src="@drawable/touxiang" />

        <com.dumu.housego.entity.MyTextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image"
            android:singleLine="true"
            android:text="深圳宝安石岩-滨湖公馆"
            android:textColor="#000000"
            android:textSize="14sp" />

        <com.dumu.housego.entity.MyTextView
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title1"
            android:layout_below="@+id/tv_title1"
            android:layout_marginTop="3dp"
            android:singleLine="true"
            android:text="深圳龙华新区观澜"
            android:textColor="#7C7B76"
            android:textSize="12sp" />

        <com.dumu.housego.entity.MyTextView
            android:id="@+id/tv_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title2"
            android:layout_below="@+id/tv_title2"
            android:layout_marginTop="3dp"
            android:text="深圳 宝安区 石岩"
            android:textColor="#7C7B76"
            android:textSize="12sp" />

        <com.dumu.housego.entity.MyTextView
            android:id="@+id/tv_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title3"
            android:layout_below="@+id/tv_title3"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:text="14500元/㎡"
            android:textColor="#ff0000"
            android:textSize="14sp" />

        <com.dumu.housego.entity.MyTextView
            android:id="@+id/tv_title5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_title4"
            android:layout_toRightOf="@+id/tv_title4"
            android:text="14500元/㎡"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>