<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_white"
    android:orientation="vertical"
    tools:context="com.dumu.housego.SearchMainActivity" >

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/rl_all_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_back_submitedittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal" >

            <Spinner
                android:id="@+id/sp_search"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:entries="@array/SEARCH_DATA"
                android:gravity="center"
                android:padding="3dp" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="请输入关键字"
                android:imeOptions="actionSearch"
                android:lines="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cacle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="搜索"
            android:textColor="#999"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/rl_detail_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:padding="5dp"
            android:orientation="horizontal" >


            <EditText
                android:id="@+id/et_detail_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="请输入关键字"
                android:imeOptions="actionSearch"
                android:lines="1"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail_cacle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="搜索"
            android:textColor="#999"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/fengexian"
        android:background="#999" />

</LinearLayout>