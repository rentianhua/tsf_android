<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:ignore="ObsoleteLayoutParam,HardcodedText,RtlHardcoded,ContentDescription,UselessParent" >

    <LinearLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/selector_bt_item"
        android:orientation="horizontal" >


<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    
    

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >
                    <ImageView
            android:id="@+id/iv_guanzhuershou"
            android:layout_width="120dp"
            android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="#ffaaaaaa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/touxiang3" />

            <com.dumu.housego.entity.MyTextView
                android:id="@+id/tv_guanzhu_xiaoquname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_guanzhu_title"
                android:layout_below="@+id/tv_guanzhu_title"
                android:layout_marginTop="3dp"
                android:textColor="#999"
                android:text="金葵花园"
                android:textSize="12sp" />

            <com.dumu.housego.entity.MyTextView
                android:id="@+id/tv_guanzhu_fangxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                   android:textColor="#999"
                android:layout_toRightOf="@+id/tv_guanzhu_xiaoquname"
                android:text="2室2厅"
                android:layout_alignBaseline="@+id/tv_guanzhu_xiaoquname"
                android:textSize="12sp" />

            <com.dumu.housego.entity.MyTextView
                android:id="@+id/tv_guanzhu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_alignTop="@+id/iv_guanzhuershou"
                android:layout_toRightOf="@+id/iv_guanzhuershou"
                android:text="深圳大鹏新区葵涌"
                 android:singleLine="true"
                android:textSize="14sp" />

            <com.dumu.housego.entity.MyTextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_guanzhu_zongjia"
                android:layout_alignBottom="@+id/tv_guanzhu_zongjia"
                android:layout_toRightOf="@+id/tv_guanzhu_zongjia"
                android:text="万"
                android:textColor="#ff0000"
                android:textSize="14sp" />

            <com.dumu.housego.entity.MyTextView
                android:id="@+id/tv_guanzhu_junjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:text="5922元/㎡"
                android:textSize="12sp" />

            <com.dumu.housego.entity.MyTextView
                android:id="@+id/tv_guanzhu_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_guanzhu_xiaoquname"
                android:layout_marginTop="3dp"
                android:layout_alignLeft="@+id/tv_guanzhu_xiaoquname"
                   android:textColor="#999"
                android:text="76平米"
                android:textSize="12sp" />

            <com.dumu.housego.entity.MyTextView
                android:id="@+id/tv_guanzhu_chaoxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_guanzhu_area"
                android:layout_toRightOf="@+id/tv_guanzhu_area"
                android:layout_marginLeft="5dp"
                   android:textColor="#999"
                android:text="南"
                android:textSize="12sp" />

            <com.dumu.housego.entity.MyTextView
                android:id="@+id/tv_guanzhu_louceng"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                   android:textColor="#999"
                android:layout_alignBaseline="@+id/tv_guanzhu_chaoxiang"
                android:layout_toRightOf="@+id/tv_guanzhu_chaoxiang"
                android:text="中层(共18层)"
                android:textSize="12sp" />

            <com.dumu.housego.entity.MyTextView
                android:id="@+id/tv_guanzhu_zongjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_guanzhu_area"
                android:layout_below="@+id/tv_guanzhu_area"
                android:text="45"
                android:textColor="#ff0000"
                android:textSize="16sp" />

        </RelativeLayout>
       
        </RelativeLayout>
        
    </LinearLayout>
    
        <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/gray" >

        <com.dumu.housego.entity.MyTextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="取消关注"
            android:textColor="@color/floralwhite" />

     
    </RelativeLayout>

</LinearLayout>