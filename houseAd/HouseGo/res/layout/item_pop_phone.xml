<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent"
    tools:ignore="HardcodedText">


    <LinearLayout
        android:id="@+id/ll_popup_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_cancle"
        android:layout_centerInParent="true"
        android:layout_margin="80dp"
        android:background="@drawable/btn_submit_shap2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_pop_boda"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bt_nobgd"
            android:gravity="center"
            android:text="拍照"
            android:textColor="#585858"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/fengexian"
            android:background="#c9c9cb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_submit_shap2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_submit_shap2"
                android:gravity="center"
                android:text="确定"
                android:textColor="#333"
                android:textSize="14sp" />

            <Button
                android:layout_width="@dimen/fengexian"
                android:layout_height="match_parent"
                android:background="#c9c9cb" />

            <TextView
                android:id="@+id/tv_phone_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_submit_shap2"
                android:gravity="center"
                android:text="取消"
                android:textColor="#333"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>